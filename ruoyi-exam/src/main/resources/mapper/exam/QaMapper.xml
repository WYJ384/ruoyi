<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.exam.mapper.QaMapper">
    
    <resultMap type="Qa" id="QaResult">
        <result property="id"    column="id"    />
        <result property="title"    column="title"    />
        <result property="answer"    column="answer"    />
        <result property="answerTip"    column="answer_tip"    />
        <result property="createBy"    column="create_by"    />
        <result property="createDate"    column="create_date"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateDate"    column="update_date"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="libId"    column="lib_id"    />
    </resultMap>
	
	<sql id="selectQaVo">
        select id, title, answer, answer_tip, create_by, create_date, update_by, update_date, remark, del_flag, lib_id from exam_qa
    </sql>
	
    <select id="selectQaList" parameterType="Qa" resultMap="QaResult">
        <include refid="selectQaVo"/>
        <where>  
            <if test="id != null  and id != '' "> and id = #{id}</if>
             <if test="title != null  and title != '' "> and title = #{title}</if>
             <if test="answer != null  and answer != '' "> and answer = #{answer}</if>
             <if test="answerTip != null  and answerTip != '' "> and answer_tip = #{answerTip}</if>
             <if test="createBy != null  and createBy != '' "> and create_by = #{createBy}</if>
             <if test="createDate != null "> and create_date = #{createDate}</if>
             <if test="updateBy != null  and updateBy != '' "> and update_by = #{updateBy}</if>
             <if test="updateDate != null "> and update_date = #{updateDate}</if>
             <if test="remark != null  and remark != '' "> and remark = #{remark}</if>
             <if test="delFlag != null  and delFlag != '' "> and del_flag = #{delFlag}</if>
             <if test="libId != null  and libId != '' "> and lib_id = #{libId}</if>
         </where>
    </select>
    
    <select id="selectQaById" parameterType="String" resultMap="QaResult">
        <include refid="selectQaVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertQa" parameterType="Qa">
        insert into exam_qa
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null  and id != ''  ">id,</if>
			<if test="title != null  and title != ''  ">title,</if>
			<if test="answer != null  and answer != ''  ">answer,</if>
			<if test="answerTip != null  and answerTip != ''  ">answer_tip,</if>
			<if test="createBy != null  and createBy != ''  ">create_by,</if>
			<if test="createDate != null  ">create_date,</if>
			<if test="updateBy != null  and updateBy != ''  ">update_by,</if>
			<if test="updateDate != null  ">update_date,</if>
			<if test="remark != null  and remark != ''  ">remark,</if>
			<if test="delFlag != null  and delFlag != ''  ">del_flag,</if>
			<if test="libId != null  and libId != ''  ">lib_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null  and id != ''  ">#{id},</if>
			<if test="title != null  and title != ''  ">#{title},</if>
			<if test="answer != null  and answer != ''  ">#{answer},</if>
			<if test="answerTip != null  and answerTip != ''  ">#{answerTip},</if>
			<if test="createBy != null  and createBy != ''  ">#{createBy},</if>
			<if test="createDate != null  ">#{createDate},</if>
			<if test="updateBy != null  and updateBy != ''  ">#{updateBy},</if>
			<if test="updateDate != null  ">#{updateDate},</if>
			<if test="remark != null  and remark != ''  ">#{remark},</if>
			<if test="delFlag != null  and delFlag != ''  ">#{delFlag},</if>
			<if test="libId != null  and libId != ''  ">#{libId},</if>
         </trim>
    </insert>
	 
    <update id="updateQa" parameterType="Qa">
        update exam_qa
        <trim prefix="SET" suffixOverrides=",">
            <if test="title != null  and title != ''  ">title = #{title},</if>
            <if test="answer != null  and answer != ''  ">answer = #{answer},</if>
            <if test="answerTip != null  and answerTip != ''  ">answer_tip = #{answerTip},</if>
            <if test="createBy != null  and createBy != ''  ">create_by = #{createBy},</if>
            <if test="createDate != null  ">create_date = #{createDate},</if>
            <if test="updateBy != null  and updateBy != ''  ">update_by = #{updateBy},</if>
            <if test="updateDate != null  ">update_date = #{updateDate},</if>
            <if test="remark != null  and remark != ''  ">remark = #{remark},</if>
            <if test="delFlag != null  and delFlag != ''  ">del_flag = #{delFlag},</if>
            <if test="libId != null  and libId != ''  ">lib_id = #{libId},</if>
        </trim>
        where id = #{id}
    </update>

	<delete id="deleteQaById" parameterType="String">
        update exam_qa set del_flag=1  where id = #{id}
    </delete>
	
    <delete id="deleteQaByIds" parameterType="String">
        update exam_qa set del_flag=1    where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>